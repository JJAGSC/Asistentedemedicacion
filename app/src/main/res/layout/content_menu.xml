<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medicacion.juanjose.asistentedemedicacion.MenuActivity"
    tools:showIn="@layout/app_bar_menu">


    <Button
        android:id="@+id/btnBDMeds"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/centroSalud"
        android:layout_alignStart="@+id/centroSalud"
        android:layout_below="@+id/centroSalud"
        android:layout_marginTop="40dp"
        android:text="Base de datos de medicamentos"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    <Button
        android:id="@+id/centroSalud"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/prospecto"
        android:layout_alignStart="@+id/prospecto"
        android:layout_below="@+id/prospecto"
        android:layout_marginTop="40dp"
        android:text="Buscar centro de salud más cercano"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    <Button
        android:id="@+id/prospecto"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/addMed"
        android:layout_alignStart="@+id/addMed"
        android:layout_below="@+id/addMed"
        android:layout_marginTop="40dp"
        android:text="Ver o hacer foto del prospecto"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/centroSalud"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.807" />

    <Button
        android:id="@+id/addMed"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="Añadir medicación y hora"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/prospecto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
