<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medicacion.juanjose.asistentedemedicacion.AddAlarm"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="247dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="Añadir recordatorio"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="303dp"
        android:layout_height="49dp"
        android:layout_marginBottom="115dp"
        android:text="Aquí se seleccionará la fecha y la hora en futuras actualizaciones"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.529" />

    <Button
        android:id="@+id/btnCreateAlarm"
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:text="Crear alarma de medicamento"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99"
        tools:layout_editor_absoluteY="506dp"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="274dp"
        android:layout_height="85dp"
        android:layout_marginBottom="198dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="31dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tvDays"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:text="Cuantos días las tomarás:"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/rGroupDays"
            android:layout_width="250dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rbDays"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unos días concretos"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <RadioButton
                android:id="@+id/rbUndefinedDays"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Indefinidamente" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="235dp"
        android:layout_height="66dp"
        android:layout_marginBottom="318dp"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="31dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Nombre del medicamento:"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="122dp" />

        <EditText
            android:id="@+id/etMedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ej.: Aspirina"
            android:inputType="textCapWords"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="184dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
